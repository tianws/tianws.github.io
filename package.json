{
    "name": "hux-blog",
    "title": "Hux Blog",
    "author": "Hux <huxpro@gmail.com>",
    "version": "1.8.2",
    "homepage": "http://huxpro.github.io",
    "repository": {
        "type": "git",
        "url": "https://github.com/Huxpro/huxpro.github.io"
    },
    "bugs": "https://github.com/Huxpro/huxpro.github.io/issues",
    "devDependencies": {
        "imagemin-cli": "^8.0.0",
        "imagemin-gifsicle": "^7.0.0",
        "imagemin-mozjpeg": "^10.0.0",
        "imagemin-pngquant": "^10.0.0",
        "less": "^4.2.0",
        "less-plugin-clean-css": "^1.6.0",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.1.0",
        "terser": "^5.24.0"
    },
    "scripts": {
        "start": "bundle exec jekyll serve -w -l --host 0.0.0.0",
        "boil": "git push boilerplate boilerplate:master",
        "push": "git push origin master --tag",
        "build:css": "lessc --clean-css less/hux-blog.less css/hux-blog.min.css",
        "build:js": "terser js/hux-blog.js -o js/hux-blog.min.js",
        "build": "npm-run-all build:css build:js",
        "watch:css": "onchange 'less/*.less' -- npm run build:css",
        "watch:js": "onchange 'js/hux-blog.js' -- npm run build:js",
        "optimize:img": "bash scripts/optimize-images.sh",
        "dev": "npm-run-all --parallel watch:* start"
    },
    "dependencies": {
        "simple-jekyll-search": "^1.10.0"
    }
}
